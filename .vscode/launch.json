// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--config=./webpack.dev.js"
			],
			// "sourceMaps": true,
			// "resolveSourceMapLocations": [
			// 	// "${workspaceFolder}/**",
			// 	"${workspaceFolder}/*/dist/**",
			// 	"${workspaceFolder}/*/out/**",
			// 	// "!**/node_modules/**"
			// ],
			"sourceMapPathOverrides": {
				// "meteor://ðŸ’»app/*": "${workspaceFolder}/*",
				// "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
				// "webpack://?:*/*": "${workspaceFolder}/*"
				"webpack://betonquest_extension/*": "${workspaceFolder}/extension/*",
				"webpack://betonquest_webview/*": "${workspaceFolder}/webview/*",
				"webpack://betonquest_server/*": "${workspaceFolder}/server/*"
			},
			"outFiles": [
				"${workspaceFolder}/*/dist/**/*.js",
				"${workspaceFolder}/*/out/**/*.js"
			],
			// "pauseForSourceMap": true,
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Run Web Extension",
			"type": "pwa-extensionHost",
			"debugWebWorkerHost": true,
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--config=./webpack.dev.js",
				"--extensionDevelopmentKind=web"
			],
			// "resolveSourceMapLocations": [
			// 	"${workspaceFolder}/**",
			// 	"${workspaceFolder}/*/dist/**",
			// 	"${workspaceFolder}/*/out/**",
			// 	"!**/node_modules/**"
			// ],
			"sourceMapPathOverrides": {
				// "meteor://ðŸ’»app/*": "${workspaceFolder}/*",
				// "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
				// "webpack://?:*/*": "${workspaceFolder}/*"
				"webpack://betonquest_extension/./*": "${workspaceFolder}/extension/*",
				"webpack://betonquest_webview/./*": "${workspaceFolder}/webview/*",
				"webpack://betonquest_server/./*": "${workspaceFolder}/server/*"
			},
			"outFiles": [
				"${workspaceFolder}/*/dist/**/*.js",
				"${workspaceFolder}/*/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Run Web Extension in Browser",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script", "open-in-browser"
			]
		},
		{
            "name": "Attach to BetonQuest Language Server",
            "type": "node",
            "request": "attach",
            "port": 6008,
            "restart": true,
            "outFiles": ["${workspaceRoot}/server/dist/**/*.js"]
        },
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/extension/out/test/suite/index"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/extension/dist/**/*.js",
				"${workspaceFolder}/extension/out/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests"
		}
	]
}
