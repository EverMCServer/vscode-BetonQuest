{
	"compilerOptions": {
		"module": "ES6",
		"moduleResolution": "Node",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"WebWorker"
		],
		"sourceMap": true,
		"outDir": "out",
		"rootDir": "src",
		"paths": {
			"betonquest-utils/*": [
				"../utils/out/*"
			],
		},
		"strict": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true
	},
	"exclude": [
		"dist/**/*",
		"out/**/*",
		"node_modules/**/*",
		".vscode-test/**/*",
		".vscode-test-web/**/*"
	],
	"references": [
		{
			"path": "../utils/"
		}
	]
}